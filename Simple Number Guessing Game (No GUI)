using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Number_Guessing_Game__No_GUI_
{
    internal class Program
    {
        static void Main(string[] args)
        {

            //Boolean to perform logical operations, True or False.
            bool isCorrectGuess = false;
            Random random = new Random();

            //Puting random numbers 1 - 10 in the integer variable.
            int randomNum = random.Next(1, 11);

            //Introduction of the program
            Console.WriteLine("Welcome to a number guessing game.");
            Console.WriteLine("A number between 1-10 will be generated.");
            Console.WriteLine("Guessing the right wins the game.");

            //Prompting user to input a number
            while (!isCorrectGuess)
            {
                Console.WriteLine("Enter your guess.");
                int guess = Convert.ToInt32(Console.ReadLine());

                if (guess > randomNum)
                {
                    Console.WriteLine("Your guess is too high.");
                }
                else if(guess < randomNum)
                {
                    Console.WriteLine("Your guess is too low.");
                }
                else
                {
                    Console.WriteLine("Congratulations, You are Correct.");
                }
            }

            Console.ReadKey();
        }
    }
}
